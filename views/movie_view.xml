<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Définition de la vue Movie_list_View -->
        <record model="ir.ui.view" id="movie_list_view">
            <field name="name">Movie List</field>
            <field name="model">model.movie</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="Name"/>
                    <field name="Premiere"/>
                    <field name="Category"/>
                    <field name="Budget"/>
                    <!-- <field name="Image"/> -->
                </tree>
            </field>
        </record>

        <!-- Définition de la vue Movie_form_View -->
        <record model="ir.ui.view" id="movie_form_view">
            <field name="name">Movie Form</field>
            <field name="model">model.movie</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="Name"/>
                            <field name="Premiere"/>
                            <field name="Category"/>
                            <field name="Budget"/>
                            <!-- <field name="Image" widget="image"/> -->
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Définition de l'action associée à la liste des films -->
        <record model="ir.actions.act_window" id="movie_action_window">
            <field name="name">Movies</field>
            <field name="res_model">model.movie</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="movie_list_view"/>
        </record>

        <!-- Menu Movies -->
        <menuitem name="Movies" id="movie_menu_root"/>

        <!-- Sous-menu Films -->
        <menuitem name="Movies" id="movie_cat" parent="movie_menu_root"/>

        <!-- Menu Liste des films -->
        <menuitem name="Liste des films" id="movies_list" parent="movie_cat" action="movie_action_window"/>

    </data>
</odoo>
