<odoo>
    <data>
        <record id="view_movie_form" model="ir.ui.view">
            <field name="name">movie.form</field>
            <field name="model">movie.model</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                        <field name="premiere"/>
                        <field name="category"/>
                        <field name="budget"/>
                        <field name="image" widget="image" options='{"preview_image": false}'/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_movie_form" model="ir.actions.act_window">
            <field name="name">Movies</field>
            <field name="res_model">movie.model</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="movie_module.view_movie_form"/>
            <field name="view_ids" eval="[(0, 0, ref('movie_module.view_movie_form'))]"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create your first movie</p>
            </field>
        </record>

        <menuitem id="menu_movie" name="Movies" parent="base.menu_sales" action="action_movie_form"/>
    </data>
</odoo>