<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- Vue de formulaire pour le modèle "Movie" -->
        <record id="internship_movie_view_form" model="ir.ui.view">
            <field name="name">internship.movie.view.form</field>
            <field name="model">internship.movie</field>
            <field name="arch" type="xml">
               <form>
                    <div class="container">
                        <div class="row">
                            <group class="col">
                                <field name="image" widget="image" class="oe_left oe_avatar" />
                            </group>
                            <group class="col">
                                <group>
                                    <field name="name" widget="CopyClipboardChar" />
                                    <field name="premiere" />
                                </group>
                                <group>
                                    <field name="category" />
                                    <field name="budget" />
                                </group>
                            </group>
                        </div>
                    </div>
                </form>
            </field>
        </record>

        <record id="internship_movie_view_tree" model="ir.ui.view">
            <field name="name">internship.movie.view.tree</field>
            <field name="model">internship.movie</field>
            <field name="arch" type="xml">
                <tree string="Movie">
                    <field name="name"/>
                    <field name="premiere"/>
                    <field name="category"/>
                    <field name="budget"/>
                    <field name="image" widget="image"/>
                </tree>
            </field>
        </record>

        <record id="internship_movie_view_kanban" model="ir.ui.view">
            <field name="name">internship.movie.view.kanban</field>
            <field name="model">internship.movie</field>
            <field name="arch" type="xml">
        <kanban class="o_kanban_mobile" sample="1">
            <field name="name"/>
            <field name="premiere"/>
            <field name="category"/>
            <field name="budget"/>
            <field name="id"/>
            <templates>
                <t t-name="kanban-box">
                    <div t-attf-class="oe_kanban_global_click">
                        <div class="o_kanban_image">
                            <img t-att-src="kanban_image('internship.movie', 'image', record.id.value)" class="o_image_64_max" height="50"/>
                        </div>
                        <div class="oe_kanban_details">
                            <strong class="o_kanban_record_title">
                                <field name="name"/>
                            </strong>
                            <div>
                                Premier: <field name="premiere"/>
                            </div>
                            <div>
                                Catégorie: <field name="category"/>
                            </div>
                            <div>
                                Budget: <field name="budget"/>
                            </div>
                             
                        </div>
                    </div>
                </t>
            </templates>
        </kanban>
    </field>
</record>
    <record id="internship_movie_view_search" model="ir.ui.view">
        <field name="name">internship.movie.view.search</field>
        <field name="model">internship.movie</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="category"/>
                <field name="premiere"/>
                <field name="budget"/>
            </search>
        </field>
    </record>


        <record id="act_open_internship_movie_view" model="ir.actions.act_window">
            <field name="name">Movies</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">internship.movie</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>

         <record model="ir.actions.act_window.view" id="act_open_internship_movie_view_kanban">
            <field name="act_window_id" ref="act_open_internship_movie_view" />
            <field name="sequence" eval="10" />
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="internship_movie_view_kanban" />
        </record>




        <menuitem id="test_menu" name="Movies" sequence="1" action="act_open_internship_movie_view"/>

    </data>
</odoo>

