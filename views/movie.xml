<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vue de formulaire pour le modèle Movie -->
        <record model="ir.ui.view" id="view_movie_form">
            <field name="name">movie.form</field>
            <field name="model">my_module.movie</field>
            <field name="arch" type="xml">
                <form string="Movie">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="premiere"/>
                            <field name="category"/>
                            <field name="budget"/>
                            <field name="image"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vue de liste pour le modèle Movie -->
        <record model="ir.ui.view" id="view_movie_tree">
            <field name="name">movie.tree</field>
            <field name="model">my_module.movie</field>
            <field name="arch" type="xml">
                <tree string="Movies">
                    <field name="name"/>
                    <field name="premiere"/>
                    <field name="category"/>
                    <field name="budget"/>
                </tree>
            </field>
        </record>

        <!-- Action pour afficher la liste des films -->
        <record model="ir.actions.act_window" id="action_movie_tree">
            <field name="name">Movies</field>
            <field name="res_model">my_module.movie</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu pour accéder aux films -->
        <menuitem id="menu_movie_root" name="Movies"/>
        <menuitem id="menu_movie" name="Movies" parent="menu_movie_root" action="action_movie_tree"/>
    </data>
</odoo>