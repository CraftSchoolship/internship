<odoo>
    <data>
        <!-- Vue de formulaire pour le modèle "Movie" -->
        <record id="view_movie_form" model="ir.ui.view">
            <field name="name">movie.form</field>
            <field name="model">movie.model</field>
            <field name="arch" type="xml">
                <form string="Movie">
                    <header>
                        <!-- Ajoutez vos boutons et vos champs d'en-tête ici -->
                        
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="premiere"/>
                                <field name="category"/>
                                <field name="budget"/>
                                <field name="image" widget="image" options='{"preview_image": false}'/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <!-- Ajoutez les champs du chatter ici -->
                    </div>
                </form>
            </field>
        </record>
    </data>
</odoo>
