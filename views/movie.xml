<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_movie_form" model="ir.ui.view">
            <field name="name">movie.form</field>
            <field name="model">internship.movie</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                        <field name="premiere"/>
                        <field name="category"/>
                        <field name="budget"/>
                        <field name="image" widget="image" options='{"preview_image": false}'/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_movie_form" model="ir.actions.act_window">
            <field name="name">Movies</field>
            <field name="res_model">internship.movie</field>
            <field name="view_mode">form</field>
            <field name="binding_view_types">form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create your first movie</p>
            </field>
        </record>

        <record id="action_movie_form_view" model="ir.actions.act_window.view">
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_movie_form"/>
            <field name="act_window_id"  ref="action_movie_form"/>

        </record>

        <menuitem id="menu_movie" name="Movies" action="action_movie_form"/>
    </data>
</odoo>